      <textarea
        name="edit_comments_comment"
        id="edit_comments_comment"
        cols="30"
        rows="5"
      >
<%=comment.comment%>
    </textarea
      >
      <button>Submit</button>
    </form>
    <form action="/comments" method="GET">
      <button>Return</button>
    </form>
  </body>
</html>
